{
  "root": true,
  "extends": ["next/core-web-vitals"],
  "plugins": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:testing-library/react"
  ],
  "overrides": [
    // Only uses Testing Library lint rules in test files
    {
      "files": ["**/tests/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"],
      "extends": [
        "plugin:jest/recommended",
        "plugin:jest/style",
        "plugin:testing-library/react"
      ]
    }
  ]
}
